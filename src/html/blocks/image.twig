{# @formatter:off #}

{% if getImage(src).hash %}
    {% if ampEnabled %}
        <amp-img
    {% else %}
        <img
    {% endif %}

            class="{{ classes }}"
            alt="{{ alt }}"
            src="{{ getImage(src).src ~ '?key=' ~ getImage(src).hash }}"
            width="{{ getImage(src).width }}"
            height="{{ getImage(src).height }}"

    {% if ampEnabled %}
            layout="{{ layout ?: 'responsive'}}"
        >
        </amp-img>
    {% else %}
        >
    {% endif %}
{% endif %}

{# @formatter:on #}
